{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "neworExistingKeyVault": {
            "type": "string"
        },
        "keyVaultName": {
            "type": "string"
        },
        "AzDevOpsSPN": {
            "type": "string"
        },
        "workspaceId": {
            "type": "string"
           // "defaultValue":"/subscriptions/1965c25a-b7fd-48b5-a393-c9e785c1c4d9/resourcegroups/azureminilab-la/providers/microsoft.operationalinsights/workspaces/azureminilab2019"
        },
        "location": {
            "type": "string",
           "defaultValue": "[resourceGroup().location]"
        }
    },
    "functions": [],
    "variables": {
        "enabledForDeployment":true,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": true,
        "enablePurgeProtection": true,
        "tenantId": "[subscription().tenantId]",
        "skuName": "Standard",
        "settingName": "Send_to_LGA",
        "secrets":  [
        {
          "secretName":"admin-account-password",
          "secretVale":"!R37fallacy1505"
        },
        {
          "secretName":"ou-path",
          "secretVale":""
        },
        {
          "secretName":"domain",
          "secretVale":"azureminilab.com"
        },
        {
          "secretName":"admin-account-user",
          "secretVale":"azadmin@azureminilab.com"
        }  
      ]
      //"final_secrets": "[union(variables('baselineSecrets'),parameters('secretsObject'))]"
        },
    "resources": [
    {
      "condition":"[equals(parameters('newOrExistingKeyVault'),'newKeyVault')]",
      "type": "Microsoft.KeyVault/vaults",
      "name": "[parameters('keyVaultName')]",
      "apiVersion": "2018-02-14",
      "location": "[parameters('location')]",
      "properties": {
        "enabledForDeployment": "[variables('enabledForDeployment')]",
        "enabledForDiskEncryption": "[variables('enabledForDiskEncryption')]",
        "enabledForTemplateDeployment": "[variables('enabledForTemplateDeployment')]",
        "enableSoftDelete": "[variables('enableSoftDelete')]",
        "enablePurgeProtection":"[variables('enablePurgeProtection')]",
        "tenantId": "[variables('tenantId')]",
        "accessPolicies": [
            {
                "objectId":"[parameters('AzDevOpsSPN')]",
                "tenantId": "[variables('tenantId')]",
                "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": []
                        }
            }
        ],
        "sku": {
          "name": "[variables('skuName')]",
          "family": "A"
        },
        "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', variables('secrets')[copyIndex()].name)]",
      "apiVersion": "2018-02-14",
      "tags": "[variables('secrets')[copyIndex()].tags]",
      "copy": {
        "name": "secretCopy",
        "count": "[length(variables('secrets'))]"
      },
      "properties": {
        "value": "[variables('secrets')[copyIndex()].value]",
        "contentType": "[variables('secrets')[copyIndex()].contentType]"
      },
      "dependsOn": [ "[concat('Microsoft.KeyVault/vaults/',parameters('keyVaultName'))]" ]
    },
    {
    "type": "Microsoft.KeyVault/vaults/providers/diagnosticSettings",
    "name": "[concat(parameters('keyVaultName'),'/microsoft.Insights/', variables('settingName'))]",
    "dependsOn": ["[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"],
     "apiVersion": "2017-05-01-preview",
     "properties":{
        "name": "[variables('settingName')]",
        "workspaceId": "[parameters('workspaceId')]",
        "logs": [
        {
          "category": "AuditEvent",
          "enabled": true
        }
         ],
        "metrics": [
        {
          "category": "AllMetrics",
          "enabled": true
        }
      ]
     }
        }
    ],
    "outputs": {
    "keyvaultName": {
      "type": "string",
      "value": "[parameters('keyVaultName')]"
    },
    "keyvaultResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults',parameters('keyvaultName'))]"
    }
    }
}