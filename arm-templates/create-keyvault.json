{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "neworExistingKeyVault": {
            "type": "string"
            //"defaultValue": "newKeyVault"
        },
        "keyVaultName": {
            "type": "string"
        },
        "AzDevOpsSPN": {
            "type": "string"
        },
        "location": {
            "type": "string",
           "defaultValue": "[resourceGroup().location]"
        }
    },
    "functions": [],
    "variables": {
        "enabledForDeployment":true,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": true,
        "enablePurgeProtection": true,
        "tenantId": "[subscription().tenantId]",
        "skuName": "Standard"
        },
    "resources": [
    {
      "condition":"[equals(parameters('newOrExistingKeyVault'),'newKeyVault')]",
      "type": "Microsoft.KeyVault/vaults",
      "name": "[parameters('keyVaultName')]",
      "apiVersion": "2018-02-14",
      "location": "[parameters('location')]",
      "properties": {
        "enabledForDeployment": "[variables('enabledForDeployment')]",
        "enabledForDiskEncryption": "[variables('enabledForDiskEncryption')]",
        "enabledForTemplateDeployment": "[variables('enabledForTemplateDeployment')]",
        "enableSoftDelete": "[variables('enableSoftDelete')]",
        "enablePurgeProtection":"[variables('enablePurgeProtection')]",
        "tenantId": "[variables('tenantId')]",
        "accessPolicies": [
            {
                "objectId":"[parameters('AzDevOpsSPN')]",
                "tenantId": "[variables('tenantId')]",
                "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": []
                        }
            }
        ],
        "sku": {
          "name": "[variables('skuName')]",
          "family": "A"
        },
        "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
        }
      }
    }
    ],
    "outputs": {}
}